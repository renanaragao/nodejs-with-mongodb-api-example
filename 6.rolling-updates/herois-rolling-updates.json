{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "api-herois-deployment",
        "labels": {
            "version": "v1",
            "app": "api-herois"
        }
    },
    "spec": {
        "replicas": 5,
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxSurge": 1,
                "maxUnavailable": 0
            }
        },
        "minReadySeconds": 0,
        "selector": {
            "matchLabels": {
                "version": "v1",
                "app": "api-herois"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "version": "v1",
                    "app": "api-herois"
                }
            },
            "spec": {
                "terminationGracePeriodSeconds": 1,
                "containers": [{
                    "name": "api-herois",
                    "image": "refimagens.azurecr.io/api-herois:v6",
                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 4000
                    }],
                    "env": [{
                        "name": "MONGO_URL",
                        "value": "mongodb-svc"
                    }, {
                        "name": "PORT",
                        "value": "4000"
                    }]
                }],
                "imagePullSecrets": [{
                    "name": "acr-credentials"
                }]
            }
        }
    }
}