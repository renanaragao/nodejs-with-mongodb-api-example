{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "api-herois-pod",
        "labels": {
            "version": "v1",
            "app": "api-herois"
        }
    },
    "spec": {
        "containers": [{
            "name": "api-herois",
            "image": "refimagens.azurecr.io/api-herois:v1",
            "ports": [{
                "containerPort": 4000
            }],
            "env": [{
                "name": "MONGO_URL",
                "value": "10.244.1.3"
            }, {
                "name": "PORT",
                "value": "4000"
            }]
        }],
        "imagePullSecrets": [{
            "name": "acr-credentials"
        }]
    }
}